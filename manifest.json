{
  "manifest_version": 3,
  "name": "Redirect Blocker",
  "version": "1.0",
  "description": "Automatically block redirects on websites that you allow for.",
  "action": {
    "default_title": "Redirect Blocker",
    "default_popup": "popup.html"
  },
  
  "permissions" : [
    "tabs",
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  }
}
